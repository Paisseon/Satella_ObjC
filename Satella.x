#import "Satella.h"

static void refreshPrefs() { // prefs by skittyblock
    CFArrayRef keyList = CFPreferencesCopyKeyList((CFStringRef)bundleIdentifier, kCFPreferencesCurrentUser, kCFPreferencesAnyHost);
    if (keyList) {
        settings = (NSMutableDictionary *)CFBridgingRelease(CFPreferencesCopyMultiple(keyList, (CFStringRef)bundleIdentifier, kCFPreferencesCurrentUser, kCFPreferencesAnyHost));
        CFRelease(keyList);
    } else settings = nil;
    if (!settings) settings = [[NSMutableDictionary alloc] initWithContentsOfFile:[NSString stringWithFormat:@"/var/mobile/Library/Preferences/%@.plist", bundleIdentifier]];

    enabled = [([settings objectForKey:@"enabled"] ?: @(true)) boolValue];
    fakeReceipt = [([settings objectForKey:@"fakeReceipt"] ?: @(false)) boolValue]; // here be dragons
}

static void PreferencesChangedCallback(CFNotificationCenterRef center, void *observer, CFStringRef name, const void *object, CFDictionaryRef userInfo) {
  refreshPrefs();
}

%hook SKPaymentTransaction
- (long long) transactionState {return 1;} // iOS 13 return purchased

- (void) _setTransactionState: (long long) arg1 {%orig(1);} // iOS 14 set as purchased

- (NSData*) transactionReceipt {
    if (!fakeReceipt) return %orig;
    NSString* receiptData64String = @""; // this base64 string is what does all the magic
    NSData* receiptData64 = [[NSData alloc] initWithBase64EncodedString:receiptData64String options:0]; // convert the above string into data
    NSURLRequest* grServerRequest = [NSURLRequest requestWithURL:[NSURL URLWithString:[NSString stringWithFormat:@"http://system.in-appstore.com/grim_receiper.php?data=%@", receiptData64]]]; // all hail zond80! this is open source too: https://pastecode.io/s/147sBdy4Bh with password "jailbreak_"
    NSData* satellaReceiptData = [NSURLConnection sendSynchronousRequest:grServerRequest returningResponse:0 error:0]; // get data from the server request
    NSDictionary* responseData = [NSJSONSerialization JSONObjectWithData:satellaReceiptData options:0 error:nil]; // convert receipt data into a json object
    NSString* grReceipt = [responseData objectForKey:@"receipt"]; // removes a bunch of unnecessary information
    NSString* satellaReceiptString = [grReceipt stringByTrimmingCharactersInSet:[NSCharacterSet whitespaceCharacterSet]]; // remove whitespace for processing
    NSData* satellaReceipt = [[NSData alloc] initWithBase64EncodedString:satellaReceiptString options:0]; // convert the finalised receipt back into nsdata

    return satellaReceipt;
    /*
